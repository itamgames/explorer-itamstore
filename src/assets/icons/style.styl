@import "variables"

@font-face
  font-family 'itamasset'
  src url(icomoon-font-path + '/itamasset.eot?i2tpt6')
  src url(icomoon-font-path + '/itamasset.eot?i2tpt6#iefix') format('embedded-opentype'), url(icomoon-font-path + '/itamasset.ttf?i2tpt6') format('truetype'), url(icomoon-font-path + '/itamasset.woff?i2tpt6') format('woff'), url(icomoon-font-path + '/itamasset.svg?i2tpt6#itamasset') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'itamasset' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

